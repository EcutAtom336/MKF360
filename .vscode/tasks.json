{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format user files",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "command": "python script/batch_format.py --clang-format-exe clang-format.exe",
            "problemMatcher": []
        },
        {
            "label": "Generate compile_commands.json",
            "type": "shell",
            "command": "MDK_parser.exe",
            "args": [
                "--root",
                "${workspaceFolder}",
                "--dep-file",
                "Objects/MKF360_Target_1.dep",
                "--compile-commands-out-path",
                ".",
                "--compiler-exe",
                "${env:ARMCLANG_HOME}/bin/armclang.exe",
                "--compiler-include-dir",
                "${env:ARMCLANG_HOME}/include",
            ],
            "problemMatcher": []
        },
        {
            "label": "Strat compile_commands.json generator monitor mode",
            "type": "shell",
            "command": "MDK_parser.exe",
            "args": [
                "--root",
                "${workspaceFolder}",
                "--dep-file",
                "Objects/MKF360_Target_1.dep",
                "--compile-commands-out-path",
                ".",
                "--compiler-exe",
                "${env:ARMCLANG_HOME}/bin/armclang.exe",
                "--compiler-include-dir",
                "${env:ARMCLANG_HOME}/include",
                "--monitor-mode"
            ],
            "problemMatcher": []
        }
    ]
}